<div class='drink-container'>
  <div class='list'>
    <h1>Cocktail List</h1>

    <% @cocktails.each do |cocktail| %>
      <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
    <% end %>

  </div>

  <div class="banner">
  <%= link_to "New cocktail", new_cocktail_path, class:"btn-transparent" %>
  </div>
</div>
