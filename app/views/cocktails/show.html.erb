<div class='drink-container'>
  <div class='list'>
    <div>
      <h1><%= @cocktail.name %></h1>
    </div>

    <div class="doses">
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name %> | <%= link_to 'delete', dose_path(dose), method: :delete%></li>
        <% end %>
      </ul>
    </div>
    <div class="reviews">
      <ul>
        <% @cocktail.reviews.each do |review| %>
          <li>
            <% review.rating.times do %>
              <i class="fas fa-star"></i>
            <% end %></br>
            <%= review.content %> | <%= link_to 'delete', review_path(review), method: :delete%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="banner flex-column-center-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
           <button type="button" class="btn-transparent" data-toggle="modal" data-target="#dose">
             Add Dose
           </button>
           <button type="button" class="btn-transparent" data-toggle="modal" data-target="#review">
             Add rating
           </button>
           <%= link_to 'back', cocktails_path, class:'btn-transparent' %>
  </div>
  <%= render "reviews/new", cocktail: @cocktail, review: Review.new %>
  <%= render "doses/new", cocktail: @cocktail, dose: Dose.new %>
</div>
