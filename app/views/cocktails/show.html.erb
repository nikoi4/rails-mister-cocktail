<h1><%= @cocktail.name %></h1>
<%= link_to 'add dose', new_cocktail_dose_path(@cocktail) %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to 'delete', dose_path(dose), method: :delete%></li>
  <% end %>
</ul>

<%= link_to 'back', cocktails_path, class:"btn btn-primary" %>
